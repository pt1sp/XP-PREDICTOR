generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Session {
  id           Int      @id @default(autoincrement())
  playedAt     DateTime
  rule         String
  stage1       String
  stage2       String
  weapon       String
  wins         Int
  losses       Int
  fatigue      Int      // 1-5
  irritability Int      // 1-5
  concentration Int     // 1-5
  startXp      Int
  endXp        Int
  memo         String?
  createdAt    DateTime @default(now())
}
